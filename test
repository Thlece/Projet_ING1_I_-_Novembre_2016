#include <stdio.h>
#include <stdlib.h>
#define Lon 16
#define lar 16

#define VIDE 0
#define PJ1 1
#define PJ2 2
#define PJ3 3
#define PJ4 4

void initialiser_Damier(int Damier[Lon][lar],int NombreJoueurHumain,int NombreJoueurEnvironnement);

int main()
{
    int damier[Lon][lar];
    int NbJ = 2;
    int NbE = 0;
    int i = 0;
    int j = 0;
    initialiser_Damier(damier,NbJ,NbE);
    for(i = 0;i< lar;i++)
    {
        for(j = 0;j<Lon;j++)
        {
            if(damier[j][i] == PJ1)
                printf("\nDamier[%d][%d]",j,i);
        }
    }

    return 0;
}

void initialiser_Damier(int Damier[Lon][lar],int NbJ,int NbE)
{
    int NbJTT = NbJ + NbE;
    int x = 0;
    int y = 0;

    switch(NbJTT)
    {
    case 4:

    case 2:
        /// On donne la valeur PJ1 à tous les pions situés en haut à gauche selon la répartition du jeu
        for(y=0;y<lar;y++)
            for(x=0;x<Lon;x++)
            {
                if((x<5 && y < 5 && x+y < 5) ||(x==1 && y==4) || (x==4 && y==1))
                    Damier[x][y] = PJ1;
            }
            break;
    default:
        printf("Error, program stops");
    }
}
